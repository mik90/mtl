{
    "version": 2,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 15,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "unitTestsRelease",
            "displayName": "Unit test release",
            "description": "Unit tests optimized",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CONAN_PROFILE": {
                    "type": "STRING",
                    "value": "gcc-release"
                },
                "ENABLE_TESTING": "ON",
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "unitTestsDebug",
            "displayName": "Unit test debug",
            "description": "Unit tests unoptimized",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CONAN_PROFILE": {
                    "type": "STRING",
                    "value": "gcc-debug"
                },
                "ENABLE_TESTING": "ON",
                "CMAKE_BUILD_TYPE": "Debug"
            }
        }
    ],
    "buildPresets": [],
    "testPresets": [
        {
            "name": "unitTestsDebug",
            "configurePreset": "unitTestsDebug",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": false
            }
        },
        {
            "name": "unitTestsRelease",
            "configurePreset": "unitTestsRelease",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": false
            }
        }
    ]
}