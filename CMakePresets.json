{
    "version": 2,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 15,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "unitTests",
            "displayName": "Unit test, default config",
            "description": "Unit test",
            "generator": "Ninja",
            "binaryDir": "./build",
            "cacheVariables": {
                "CONAN_PROFILE": {
                    "type": "STRING",
                    "value": "default"
                },
                "ENABLE_TESTING": "ON",
                "ENABLE_BENCHMARKS": "ON"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "unitTests",
            "configurePreset": "unitTests"
        }
    ],
    "testPresets": [
        {
            "name": "unitTests",
            "configurePreset": "unitTests",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            }
        }
    ]
}