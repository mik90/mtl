{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "description": "Common vars, default to clang",
      "hidden": true,
      "generator": "Ninja Multi-Config",
      "binaryDir": "./build",
      "installDir": "./install"
    },
    {
      "name": "tests-and-benchmarks-rel",
      "displayName": "Unit testing w/ instrumentation (RelWithDebInfo)",
      "description": "Unit tests and benchmarks",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "ENABLE_TESTING": "ON",
        "ENABLE_BENCHMARKS": "ON",
        "ENABLE_SANITIZERS": "ON"
      }
    },
    {
      "name": "tests-dbg",
      "displayName": "Unit Tests (Debug)",
      "description": "Unit tests with full debug mode",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "ENABLE_TESTING": "ON",
        "ENABLE_BENCHMARKS": "OFF",
        "ENABLE_SANITIZERS": "ON"
      }
    }
  ],
  "testPresets": [
    {
      "name": "base",
      "hidden": true,
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": false
      },
      "configurePreset": "base"
    },
    {
      "name": "tests-dbg",
      "configurePreset": "tests-dbg",
      "inherits": "base"
    },
    {
      "name": "tests-rel",
      "configurePreset": "tests-and-benchmarks-rel",
      "inherits": "base"
    }
  ]
}
