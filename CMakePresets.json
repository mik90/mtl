{
    "version": 2,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 15,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "allProjectsRelWithDebInfo",
            "displayName": "allProjectsRelWithDebInfo",
            "description": "Unit tests and benchmarks",
            "generator": "Ninja",
            "binaryDir": "./build",
            "cacheVariables": {
                "CONAN_PROFILE": {
                    "type": "STRING",
                    "value": "default"
                },
                "CMAKE_BUILD_TYPE": {
                    "value": "RelWithDebInfo"
                },
                "ENABLE_TESTING": "ON",
                "ENABLE_BENCHMARKS": "ON"
            }
        },
        {
            "name": "unitTestsDebug",
            "displayName": "unitTestsDebug",
            "description": "Unit tests with debug config",
            "generator": "Ninja",
            "binaryDir": "./build",
            "cacheVariables": {
                "CONAN_PROFILE": {
                    "type": "STRING",
                    "value": "default"
                },
                "CMAKE_BUILD_TYPE": {
                    "value": "Debug"
                },
                "ENABLE_TESTING": "ON",
                "ENABLE_BENCHMARKS": "OFF"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "unitTests",
            "configurePreset": "unitTestsDebug"
        },
        {
            "name": "unitTests",
            "configurePreset": "allProjectsRelWithDebInfo",
            "targets": [
                "UnitTest"
            ]
        },
        {
            "name": "benchmarks",
            "configurePreset": "allProjectsRelWithDebInfo",
            "targets": [
                "Benchmark"
            ]
        }
    ],
    "testPresets": [
        {
            "name": "unitTestDebug",
            "configurePreset": "unitTestsDebug",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": false
            }
        },
        {
            "name": "unitTestRelease",
            "configurePreset": "allProjectsRelWithDebInfo",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": false
            }
        }
    ]
}