    "version": "0.2.0",
    "configurations": [
        {
            "name": "mtlUnitTest",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/UnitTest",
            "args": [
                "--gtest_filter=*"
            ],
            "console": "internalConsole",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "nnUnitTest",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/nnUnitTest",
            "args": [
                "--gtest_filter=*without_hidden*"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "internalConsole",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}